.recommendSong .header{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSong .header image{
  width: 100%;
  height: 100%;
}
.recommendSong .header .date{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -135rpx;
  margin-top: -45rpx;

  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.header .date .month{
  font-size: 38rpx;
}

/* 列表区域 */
.ListContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listHeader{
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .changeMore{
  float: right;
}

/* 歌曲内容区 */
.listScroll{
  height: calc(100vh - 380rpx);
}
.scrollItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.scrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.musciInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musciInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.scrollItem .iconfont{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 0;
  line-height: 80rpx;
  text-align: right; 
}